# Database connection (Vercel Postgres)
DATABASE_URL="your-database-url-here"

# App URL (set to your Vercel URL in production)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Web Push VAPID Keys (Generate using: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Cron Job Secrets
CRON_SECRET="your-production-cron-secret"
CRON_TEST_SECRET="your-test-cron-secret"

# Iron Session Secret (Generate using: openssl rand -base64 32)
SESSION_SECRET="your-session-secret-here"
